<header>
  <h1>API Documentation</h1>
</header>

<main class="api_main">
  <nav class="api_nav">
    <ul>
      <li><a href="#auth">Auth</a></li>
    </ul>
  </nav>

  <div class="api_doc">
    <section id="auth">
      <h2>Auth</h2>
      <details class="POST">
        <summary>
          <span class="method">POST</span>
          <code>/auth</code>
        </summary>
        <div class="api_description">
          Get a JWT.
        </div>
        <div class="api_body">
          Body: <code>ILogin</code>
        </div>
        <div class="api_retun">
          Returns: <code>IToken</code>
        </div>
      </details>
    </section>

    <section id="users">
      <h2>Users</h3>
        <details class="auth-locked GET">
          <summary>
            <span class="method">GET</span>
            <code>/api/users</code>
          </summary>
          <div class="api_description">
            Get all users
          </div>
          <div class="api_retun">
            Returns: <code>IUser[]</code>
          </div>
        </details>

        <details class="POST">
          <summary>
            <span class="method">POST</span>
            <code>/api/users</code>
          </summary>
          <div class="api_description">
            Create a user.
          </div>
          <div class="api_body">
            Body: <code>IUserInput</code>
          </div>
          <div class="api_retun">
            Returns: <code>IUser</code>
          </div>
        </details>

        <hr />

        <details class="auth-locked GET">
          <summary>
            <span class="method">GET</span>
            <code>/api/users/{user_id}</code>
          </summary>
          <div class="api_description">
            Get specific user
          </div>
          <div class="api_params">
            Params:
            <ul>
              <li><code>user_id</code>: <code>/[0-9]+/</code></li>
            </ul>
          </div>
          <div class="api_retun">
            Returns: <code>IUser</code>
          </div>
        </details>
        <details class="auth-locked PUT">
          <summary>
            <span class="method">PUT</span>
            <code>/api/users/{user_id}</code>
          </summary>
          <div class="api_description">
            Update specific user
          </div>
          <div class="api_params">
            Params:
            <ul>
              <li><code>user_id</code>: <code>/[0-9]+/</code></li>
            </ul>
          </div>
          <div class="api_retun">
            Returns: <code>IUser</code>
          </div>
        </details>
        <details class="auth-locked DELETE">
          <summary>
            <span class="method">DELETE</span>
            <code>/api/users/{user_id}</code>
          </summary>
          <div class="api_description">
            Delete specific user
          </div>
          <div class="api_params">
            Params:
            <ul>
              <li><code>user_id</code>: <code>/[0-9]+/</code></li>
            </ul>
          </div>
          <div class="api_retun">
            Returns: <code>IUser</code>
          </div>
        </details>
    </section>

    <section>
      <h2>Groups</h2>

      <details class="auth-locked GET">
        <summary>
          <span class="method">GET</span>
          <code>/api/users/{user_id}/groups</code>
        </summary>
        <div class="api_description">
          Get all groups of a user
        </div>
        <div class="api_retun">
          Returns: <code>IGroup[]</code>
        </div>
      </details>

      <details class="auth-locked POST">
        <summary>
          <span class="method">POST</span>
          <code>/api/users/{user_id}/groups</code>
        </summary>
        <div class="api_description">
          Create a group with user.
        </div>
        <div class="api_body">
          Body: <code>IGroupInput</code>
        </div>
        <div class="api_retun">
          Returns: <code>IGroup</code>
        </div>
      </details>

      <hr />
    </section>
  </div>

  <aside class="api_types">
    <h2>API Types</h2>
    <details>
      <summary>
        <code>IUser</code>
      </summary>
      <code>
        <pre>{
  id: number,
  username: string,
  email: string,
  phone: string | number,
  birthdate: IDateTime,
  address: string,
  city: string,
  country: string,
  status: EStatus,
  registerDate: IDateTime,
  outRelations: IRelation[],
  inRelations: IRelation[],
  outMessages: IMessage[],
  inMessages: IMessage[],
  ownedGroups: IGroup[],
  groups: IGroup[]
}</pre>
      </code>
    </details>
    <details>
      <summary>
        <code>IUserInput</code>
      </summary>
      <code>
        <pre>{
    username: string,
    password: string,
    email: string,
    phone: string,
    birthdate: string,
    address: string,
    city: string,
    country: string
}</pre>
      </code>
    </details>
  </aside>
</main>

